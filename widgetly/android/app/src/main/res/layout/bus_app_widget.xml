<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Б1 Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Bus label box (refresh hotspot) -->
        <TextView
            android:id="@+id/bus_line"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/line_circle_b1"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:text="Б1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <!-- Times row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Time box 1 -->
            <LinearLayout
                android:id="@+id/timebox1_line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel1_time1"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs1_time1"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>

            <!-- Time box 2 -->
            <LinearLayout
                android:id="@+id/timebox2_line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel1_time2"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs1_time2"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>

            <!-- Time box 3 -->
            <LinearLayout
                android:id="@+id/timebox3_line1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel1_time3"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs1_time3"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider (flush, no extra margins) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider"
        android:layout_marginVertical="8dp"
        android:text=""/>

    <!-- Б11 Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Bus label box (refresh hotspot) -->
        <TextView
            android:id="@+id/bus_line2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/line_circle_b11"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:text="Б11"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <!-- Times row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Time box 1 -->
            <LinearLayout
                android:id="@+id/timebox1_line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel2_time1"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs2_time1"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>

            <!-- Time box 2 -->
            <LinearLayout
                android:id="@+id/timebox2_line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel2_time2"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs2_time2"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>

            <!-- Time box 3 -->
            <LinearLayout
                android:id="@+id/timebox3_line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TimeBox">
                <TextView
                    android:id="@+id/rel2_time3"
                    style="@style/TimeRelative"/>
                <TextView
                    android:id="@+id/abs2_time3"
                    style="@style/TimeAbsolute"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
